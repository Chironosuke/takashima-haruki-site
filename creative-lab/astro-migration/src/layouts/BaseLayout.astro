---
// src/layouts/BaseLayout.astro
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Technology × Creativity で新しい価値を創造します",
} = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Tailwind Config -->
    <script>
      tailwind.config = {
        darkMode: ["selector", '[data-theme="light"]'],
        theme: {
          extend: {
            colors: {
              "primary-dark": "#1a1a1a",
              "primary-blue": "#3b82f6",
              "primary-purple": "#8b5cf6",
              "primary-emerald": "#10b981",
              "accent-gold": "#f59e0b",
              "text-light": "#ffffff",
              "text-dark": "#2c3e50",
              "text-gray": "#9ca3af",
              "text-muted": "#6b7280",
              "bg-light": "#ffffff",
              "bg-section": "#f8f9fb",
            },
            fontFamily: {
              mono: ["Monaco", "Menlo", "Ubuntu Mono", "monospace"],
            },
            animation: {
              "fade-in-up": "fadeInUp 0.6s ease forwards",
              "pulse-glow": "pulse 2s infinite",
              blink: "blink 1s infinite",
              glow: "glow 2s ease-in-out",
              "type-writer": "typeWriter 3s steps(40, end)",
            },
            keyframes: {
              fadeInUp: {
                from: { opacity: "0", transform: "translateY(30px)" },
                to: { opacity: "1", transform: "translateY(0)" },
              },
              blink: {
                "0%, 50%": { opacity: "1" },
                "51%, 100%": { opacity: "0" },
              },
              glow: {
                "0%, 100%": { textShadow: "0 0 5px rgba(0, 255, 0, 0.3)" },
                "50%": { textShadow: "0 0 20px rgba(0, 255, 0, 0.8)" },
              },
            },
            backdropBlur: {
              xs: "2px",
            },
          },
        },
      };
    </script>

    <style>
      /* カスタムCSS変数（元のCSSから完全移植） */
      :root {
        /* スタンダード（ダーク）テーマ */
        --primary-dark: #1a1a1a;
        --primary-blue: #3b82f6;
        --primary-purple: #8b5cf6;
        --primary-emerald: #10b981;
        --accent-gold: #f59e0b;
        --text-light: #ffffff;
        --text-dark: #2c3e50;
        --text-gray: #9ca3af;
        --text-muted: #6b7280;
        --bg-light: #ffffff;
        --bg-section: #f8f9fb;
        --glass-bg: rgba(255, 255, 255, 0.1);
        --glass-border: rgba(255, 255, 255, 0.2);
        --gradient-primary: linear-gradient(135deg, #8b5cf6, #3b82f6, #10b981);
        --gradient-card: linear-gradient(
          135deg,
          rgba(139, 92, 246, 0.1),
          rgba(59, 130, 246, 0.1)
        );
        --shadow-glass: 0 8px 32px rgba(0, 0, 0, 0.3);
        --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.15);

        /* 背景とカラー */
        --body-bg: #1a1a1a;
        --body-color: #ffffff;
        --hero-bg: linear-gradient(
          135deg,
          rgba(139, 92, 246, 0.8) 0%,
          rgba(59, 130, 246, 0.6) 50%,
          rgba(16, 185, 129, 0.8) 100%
        );
        --section-bg: #1a1a1a;
        --card-bg: rgba(255, 255, 255, 0.1);
        --card-border: rgba(255, 255, 255, 0.2);
        --header-bg: rgba(26, 26, 26, 0.9);

        /* トランジション */
        --transition-theme: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* ライト（ビジネス）テーマ */
      [data-theme="light"] {
        --primary-dark: #1a1a1a;
        --text-light: #ffffff;
        --text-dark: #1a1a1a;
        --text-gray: #666666;
        --text-muted: #666666;
        --accent-gold: #d4af37;

        /* 背景とカラー変更 */
        --body-bg: #ffffff;
        --body-color: #1a1a1a;
        --hero-bg: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        --section-bg: #f8f9fa;
        --card-bg: #ffffff;
        --card-border: #e2e8f0;
        --glass-bg: rgba(255, 255, 255, 0.9);
        --glass-border: #e2e8f0;
        --header-bg: rgba(255, 255, 255, 0.95);
        --shadow-glass: 0 8px 32px rgba(0, 0, 0, 0.1);
        --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.08);
      }

      .gradient-primary {
        background: var(--gradient-primary);
      }
      .gradient-gold {
        background: var(--gradient-gold);
      }
      .glass-bg {
        background: var(--glass-bg);
      }
      .glass-border {
        border-color: var(--glass-border);
      }
      .shadow-glass {
        box-shadow: var(--shadow-glass);
      }
      .transition-theme {
        transition: var(--transition-theme);
      }

      /* 料金シミュレーターの背景アニメーション */
      .c-pricing-simulator-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--gradient-primary);
        opacity: 0.05;
        z-index: -1;
      }

      /* オプションカードのホバーアニメーション */
      .c-option-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: var(--gradient-primary);
        opacity: 0.1;
        transition: left 0.4s ease;
        z-index: 0;
      }

      .c-option-card:hover::before {
        left: 0;
      }

      .c-option-card.is-selected::before {
        left: 0;
      }

      /* サービスカードの上部グラデーション */
      .c-service-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient-primary);
      }

      /* ブログカードの上部グラデーション */
      .c-blog-post-preview-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient-primary);
      }

      /* コードアニメーション専用 */
      .c-code-animation__line {
        position: relative;
        min-height: 1.5em;
        white-space: nowrap;
        overflow: visible;
        display: block;
      }

      .c-code-animation__cursor {
        color: #00ff00;
        animation: blink 1s infinite;
        position: absolute;
        margin-left: 2px;
      }

      [data-theme="light"] .c-code-animation__cursor {
        color: #2563eb;
      }

      .is-typed-complete {
        animation: glow 2s ease-in-out;
      }

      [data-theme="light"] .is-typed-complete {
        animation: none;
      }

      /* プログレスバー */
      .progress-bar {
        position: fixed;
        top: 0;
        left: 0;
        height: 3px;
        background: var(--gradient-primary);
        z-index: 9999;
        transition: width 0.3s ease;
      }

      /* Tailwindクラスの色を強制的に上書き */
      .text-white {
        color: var(--text-light) !important;
      }

      [data-theme="light"] .text-white {
        color: var(--text-light) !important;
      }

      .dark\\:text-primary-dark {
        color: var(--body-color);
      }

      [data-theme="light"] .dark\\:text-primary-dark {
        color: var(--text-dark) !important;
      }

      .text-text-gray {
        color: var(--text-gray) !important;
      }

      [data-theme="light"] .text-text-gray,
      [data-theme="light"] .dark\\:text-gray-600 {
        color: var(--text-gray) !important;
      }

      .text-accent-gold {
        color: var(--accent-gold) !important;
      }

      .glass-bg {
        background: var(--glass-bg) !important;
      }

      .glass-border {
        border-color: var(--glass-border) !important;
      }

      .gradient-primary {
        background: var(--gradient-primary) !important;
      }

      .hover\\:text-accent-gold:hover {
        color: var(--accent-gold) !important;
      }

      .bg-gradient-to-r.from-yellow-500.via-accent-gold.to-yellow-500 {
        background: linear-gradient(
          to right,
          var(--accent-gold),
          var(--accent-gold),
          var(--accent-gold)
        ) !important;
      }

      .bg-primary-dark\\/90 {
        background: var(--header-bg) !important;
      }

      [data-theme="light"] .bg-primary-dark\\/90,
      [data-theme="light"] .dark\\:bg-white\\/95 {
        background: var(--header-bg) !important;
      }

      .bg-primary-dark {
        background: var(--primary-dark) !important;
      }

      [data-theme="light"] .bg-primary-dark,
      [data-theme="light"] .dark\\:bg-gray-900 {
        background: var(--section-bg) !important;
      }

      .border-white\\/20 {
        border-color: var(--glass-border) !important;
      }

      [data-theme="light"] .border-white\\/20,
      [data-theme="light"] .dark\\:border-gray-200 {
        border-color: var(--glass-border) !important;
      }

      .border-accent-gold {
        border-color: var(--accent-gold) !important;
      }

      [data-theme="light"] .c-footer-content__title,
      [data-theme="light"] .c-footer-content__label {
        color: var(--text-dark) !important;
      }

      [data-theme="light"] .c-footer-navigation-list__link,
      [data-theme="light"] .c-footer-content__description,
      [data-theme="light"] .c-copyright {
        color: var(--text-gray) !important;
      }

      [data-theme="light"] .c-primary-navigation__link {
        color: var(--text-dark) !important;
      }

      [data-theme="light"] .c-back-button {
        color: var(--text-dark) !important;
      }

      [data-theme="light"] .c-mobile-menu-toggle {
        color: var(--text-dark) !important;
      }

      [data-theme="light"] .c-mobile-navigation__link {
        color: var(--text-dark) !important;
      }
    </style>
  </head>
  <body
    class="font-sans overflow-x-hidden leading-relaxed transition-theme"
    style="background: var(--body-bg); color: var(--body-color)"
  >
    <slot />
  </body>
</html>
